# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# Replace with your MongoDB connection string
# For local: mongodb://localhost:27017/sweet_shop
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sweet_shop?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/sweet_shop

# JWT Configuration
# Generate a strong secret key (you can use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1d

# Admin User Configuration
# These will be used to create the default admin user on first run
ADMIN_USERNAME=candyAdmin
ADMIN_PASSWORD=change-this-password-in-production

